<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:LarreaPaulEval3.ViewModels"
             x:Class="LarreaPaulEval3.Views.MovieListPage">

    <ContentPage.BindingContext>
        <viewModels:MovieListViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout Padding="30" Spacing="15">

            <Label Text="PLarrea - Lista de PelÃ­culas"
                   FontSize="24"
                   HorizontalOptions="Center" 
                   FontAttributes="Bold"
                   TextColor="DodgerBlue" />

            <ListView x:Name="PLarrea_listView"
                      ItemsSource="{Binding Movies}"
                      VerticalOptions="FillAndExpand"
                      HasUnevenRows="True" 
                      BackgroundColor="White">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10">
                                <Label Text="{Binding Titulo}"
                                       FontSize="16"
                                       LineBreakMode="WordWrap"
                                       HorizontalOptions="StartAndExpand"
                                       VerticalOptions="CenterAndExpand"
                                       TextColor="Black"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
