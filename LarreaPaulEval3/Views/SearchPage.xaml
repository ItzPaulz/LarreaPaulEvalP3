<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LarreaPaulEval3.ViewModels"
             x:Class="LarreaPaulEval3.Views.SearchPage"
             Title= "Búsqueda de Películas">


    <ContentPage.BindingContext>
        <vm:SearchViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="20" Spacing="15">
        
        <Label Text="Búsqueda de Películas - PLarrea"
               FontSize="Large"
               HorizontalOptions="Center"
               FontAttributes="Bold" />

      
        <Entry Placeholder="Ingrese el nombre de la película"
               Text="{Binding NombrePelicula}"
               FontSize="Medium"
               AutomationId="PLarrea_NombrePelicula"
               VerticalOptions="CenterAndExpand" />

      
        <Button Text="Buscar"
                Command="{Binding ComandoBuscar}"
                BackgroundColor="DodgerBlue"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                AutomationId="PLarrea_BotonBuscar"
                VerticalOptions="CenterAndExpand" />

       
        <Button Text="Limpiar"
                Command="{Binding ComandoLimpiar}"
                BackgroundColor="Gray"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                AutomationId="PLarrea_BotonLimpiar"
                VerticalOptions="CenterAndExpand" />

     
        <Label Text="{Binding MensajeResultado}"
               FontSize="Medium"
               TextColor="DarkGreen"
               AutomationId="PLarrea_MensajeResultado"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" />
    </StackLayout>
</ContentPage>
